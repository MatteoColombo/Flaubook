<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/tile_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/tile_play"
        style="@style/BookPlayerButton.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:icon="@drawable/ic_play_arrow_black_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_play_pause"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tile_roll_back"
        style="@style/BookPlayerButton.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18dp"
        app:icon="@drawable/ic_replay_30_black_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tile_play"
        app:layout_constraintStart_toEndOf="@+id/book_play_pause"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tile_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/tile_roll_back"
        app:layout_constraintStart_toEndOf="@+id/tile_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tile_remaining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tile_roll_back"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tile_picture"
        app:layout_constraintTop_toBottomOf="@+id/tile_title" />

</androidx.constraintlayout.widget.ConstraintLayout>